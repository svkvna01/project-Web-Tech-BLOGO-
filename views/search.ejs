<!DOCTYPE html>
<html lang="nl">

<head>
    <meta charset="UTF-8">
    <title>Zoekresultaten</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/style-navbar.css">
    <link rel="stylesheet" href="/css/search.css">
    <link rel="stylesheet" href="/css/style-posts.css">
    <link rel="stylesheet" href="/css/style-comments.css">
</head>

<body>
    <%- include('navbar') %>

        <div class="search-container">
            <div class="search-header">
                <h1 class="search-title">Zoekresultaten voor <span class="search-query">"<%= query %>"</span></h1>
                <div class="results-toggle">
                    <button class="toggle-btn active" onclick="showPanel('trips')">Trips</button>
                    <button class="toggle-btn" onclick="showPanel('users')">Users</button>
                    <button class="toggle-btn" onclick="showPanel('posts')">Posts</button>
                </div>
            </div>

            <!-- Trips Panel -->
            <div id="trips-panel" class="results-panel active">
                <% if (trips.length===0) { %>
                    <div class="empty-message">
                        <p>No trips found for this search.</p>
                    </div>
                    <% } else { %>
                        <div class="result-count">
                            <%= trips.length %> trip<%= trips.length !==1 ? 's' : '' %> found
                        </div>
                        <% trips.forEach(trip=> { %>
                            <div class="trip-card">
                                <div class="trip-card-header">
                                    <a href="/trip/<%= trip.id %>?from=search" class="trip-title">
                                        <%= trip.title %>
                                    </a>
                                    <a href="/user/<%= trip.username %>" class="trip-author">@<%= trip.username %></a>
                                </div>
                                <div class="trip-details">
                                    <span class="trip-detail-item">
                                        <%= trip.country %>
                                    </span>
                                    <span class="trip-detail-item">
                                        <%= trip.city %>
                                    </span>
                                    <span class="trip-detail-item">
                                        <%= new Date(trip.date).toLocaleDateString('nl-BE') %>
                                    </span>
                                </div>
                                <% if (trip.activity) { %>
                                    <div class="trip-activity">
                                        <%= trip.activity %>
                                    </div>
                                    <% } %>
                            </div>
                            <% }) %>
                                <% } %>
            </div>

            <!-- Users Panel -->
            <div id="users-panel" class="results-panel">
                <% if (users.length===0) { %>
                    <div class="empty-message">
                        <p>No users found for this search.</p>
                    </div>
                    <% } else { %>
                        <div class="result-count">
                            <%= users.length %> user<%= users.length !==1 ? 's' : '' %> found
                        </div>
                        <% users.forEach(user=> { %>
                            <div class="user-card">
                                <div class="user-avatar">
                                    <img src="<%= user.profilePic || '/img/pfp.jpg' %>" class="pfp">
                                </div>
                                <div class="user-info">
                                    <a href="/user/<%= user.username %>" class="user-username">@<%= user.username %></a>
                                    <div class="user-fullname">
                                        <%= user.firstName %>
                                            <%= user.lastName %>
                                    </div>
                                </div>
                                <a href="/user/<%= user.username %>" class="view-profile-btn">View profile</a>
                            </div>
                            <% }) %>
                                <% } %>
            </div>
            <!-- Posts Panel -->
            <div id="posts-panel" class="results-panel">
                <% if (posts.length===0) { %>
                    <div class="empty-message">
                        <p>No posts found for this search.</p>
                    </div>
                <% } else { %>
                        <div class="result-count">
                            <%= posts.length %> post<%= posts.length !==1 ? 's' : '' %> gevonden
                        </div>
                        <div class="posts">
                            <% posts.forEach(post => { %>
    
                                <div class="post">
    
                                    <div class="post-header">
                                        <img src="<%= post.profilePic || '/img/pfp.jpg' %>" class="pfp">
                                        <a href="/user/<%= post.username %>" class="postUserName">
                                            <%= post.username %>
                                        </a>
                                    </div>
    
                                    <% if (post.images && post.images.length > 0) { %>
                                        <div class="post-images">
                                            <% post.images.forEach(imagePath => { %>
                                                <img src="<%= imagePath %>" alt="Post foto" style="max-width: 400px; margin: 5px;">
                                            <% }) %>
                                        </div>
                                    <% } %>
    
                                    <% if (user.username === post.username) { %>
                                        <!--- if the post is from the user that in logged in: delete button available -->
                                        <form action="/posts/delete" method="POST" style="display:inline;">
                                            <input type="hidden" name="id" value="<%= post.id %>">
                                            <button type="submit">Delete post</button>
                                        </form>
                                    <% } %>
    
                                    <!-- onder de post picture als er een is de caption er onder zetten-->
                                    <p>
                                        <span class="usernameCaptionAuthor">
                                            <b><%= post.username %></b>
                                        </span>
                                        <span><b> : </b></span>
                                        <span class="caption"><%= post.caption %></span>
                                    </p>
    
                                    <div class="post-actions">
                                        <button
                                            class="bookmark-btn <%= post.isSaved ? 'saved' : '' %>"
                                            data-post-id="<%= post.id %>"
                                            data-saved="<%= post.isSaved ? 1 : 0 %>"
                                            onclick="toggleBookmark(this)">
                                        </button>
                                    </div>
    
                                    <div>
                                        <%- include('comments', { post: post, user: user }) %>
                                    </div>
    
                                    <small class="createdDatum">
                                        <%= new Date(post.created_at).toLocaleString('nl-BE') %>
                                    </small>
    
                                </div>
                                <hr>
    
                            <% }) %>
                        </div>
                <% } %>
        </div>

        <script>
            function showPanel(panel) {
                // Hide all panels
                document.querySelectorAll('.results-panel').forEach(p => {
                    p.classList.remove('active');
                });

                // Remove active from all buttons
                document.querySelectorAll('.toggle-btn').forEach(btn => {
                    btn.classList.remove('active');
                });

                // Show selected panel
                document.getElementById(panel + '-panel').classList.add('active');

                // Activate clicked button
                event.target.classList.add('active');
            }
        </script>
</body>

</html>